! This is an X resources file. It should be loaded with
! $ xrdb -merge .urxvt

! $TERM
URxvt*termName: rxvt-unicode

! font
! URxvt*font:               xft:Ubuntu Mono:medium:pixelsize=11,style=regular
URxvt.font:                 xft:terminus:size=7
URxvt*boldFont:             xft:terminus:size=7
URxvt*letterSpace:          1

! url launcher
!URxvt*urlLauncher:          chromium-browser

! scrolling
URxvt*scrollBar:            false
URxvt*scrollTtyOutput:      true
URxvt*scrollTtyKeypress:    true
URxvt*scrollWithBuffer:     true
URxvt*secondaryScreen:      true
URxvt*secondaryScroll:      true
URxvt.mouseWheelScrollPage: false

! cursor
URxvt*cursorUnderline:      true

! scripts
URxvt.perl-ext-common:      vtwheel,resize-font
URxvt.perl-ext:             default,matcher

URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-plus:      resize-font:bigger
URxvt.keysym.C-equal:     resize-font:reset
URxvt.keysym.C-question:  resize-font:show
URxvt.resize-font.step:   1


! misc
URxvt*tripleclickwords:     true
URxvt*urlLauncher:          /usr/bin/chromium-browser
URxvt*matcher.Button:       1


